
function mypwd() {
   local dirname=${PWD%/*}
   if (( $(wc -c <<< $dirname) < 20 )); then echo $dirname; else echo ${dirname: -20}; fi
}
export PROMPT_COMMAND='h=$(history 1 | cut -c 8-); (( ${#h} > 20 )) && echo "$h" >> ~/.eternal_history'
